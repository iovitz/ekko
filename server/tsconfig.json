{
  "compilerOptions": {
    "target": "es6",
    "useDefineForClassFields": true,
    // 因为node是commonJS
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": false,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/config/**/*.ts"]
}
